<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaLEDerWand.MainWindow"
        xmlns:local="clr-namespace:AvaLEDerWand"
        
        
        Title="Avalon Test-LED-Wand">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Datei">
                <MenuItem Header="_Ende" Command="{Binding Exit}" />
                <MenuItem Header="_Config" Command="{Binding OpenConfig}"/>
            </MenuItem>
        </Menu>

      
        <Grid RowDefinitions="*,Auto"  DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

          
        <local:LedControl DataContext="{Binding LedVm}"  Grid.Row="0" Margin="2"/>
                  
        <StackPanel Grid.Row="1">
            <Button Command="{Binding DoKlick}" CommandParameter="34" Content="FullScreen" />
        </StackPanel>
      </Grid>

    </DockPanel>
    
</Window>